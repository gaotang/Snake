<UserControl x:Class="Snake.App.Module.Views.AppLogQueryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:SnakeViews="clr-namespace:Snake.App.Module.Views"
             xmlns:SnakeViewModels="clr-namespace:Snake.App.Module.ViewModels"
             d:DataContext="{d:DesignInstance SnakeViewModels:AppLogViewModel}"
             xmlns:local="clr-namespace:Snake.App.Module.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <Thickness x:Key="ControlMargin">0 2 2 0</Thickness>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="2" VerticalAlignment="Center" Text="Limit" />
            <Controls:NumericUpDown Width="100" Margin="2" VerticalAlignment="Center" Maximum="40" Minimum="0"
                                    Value="{Binding RowHeaderWidth, UpdateSourceTrigger=PropertyChanged}" />
            <Button Width="26" Height="16" Margin="2">
                <iconPacks:FontAwesome Width="12" Height="12" Kind="AngleDoubleRightSolid" />
            </Button>
            <TextBlock Margin="2" VerticalAlignment="Center" Text="应用名" />
            <ComboBox Width="100" Margin="2" VerticalAlignment="Center"
                      ItemsSource="{Binding Appications}"
                      SelectedValue="{Binding HeadersVisibility}" />
            <TextBlock Margin="2" VerticalAlignment="Center" Text="标签" />
            <ComboBox Width="100" Margin="2" VerticalAlignment="Center"
                      ItemsSource="{Binding Appications}"
                      SelectedValue="{Binding HeadersVisibility}" />
            <Button Width="60" Margin="2" Content="查  询" FontSize="12" />
        </StackPanel>
        
        <DataGrid x:Name="AzureDataGrid"
                  Grid.Row="1"
                  Margin="5"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding Path=Albums}"
                  RowHeaderWidth="0"
                  Style="{DynamicResource AzureDataGrid}">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Title}" Header="Title" />
                <DataGridTextColumn Binding="{Binding Artist.Name}" Header="Artist" />
                <DataGridTextColumn Binding="{Binding Genre.Name}" Header="Genre" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
